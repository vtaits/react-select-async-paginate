{
  "name": "use-select-async-paginate-fetch",
  "version": "1.0.0",
  "description": "React hook for integration with `select-async-paginate-model` and `select-async-paginate-fetch`",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "dist/index.d.ts",
  "keywords": [
    "react",
    "react-select",
    "async",
    "pagination",
    "fetch"
  ],
  "repository": "git@github.com:vtaits/react-select-async-paginate.git",
  "homepage": "https://github.com/vtaits/react-select-async-paginate/tree/master/packages/use-select-async-paginate-fetch",
  "author": "Vadim Taits",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format esm,cjs --dts --legacy-output",
    "lint": "biome check src",
    "lint:fix": "biome check src --write --unsafe",
    "format": "biome format src --write",
    "prepare": "bun run build",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "codecov": "codecov -F react_select_fetch"
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-select": "^5.0.0",
    "react-select-async-paginate": "^0.7.0"
  },
  "dependencies": {
    "krustykrab": "^1.1.0",
    "select-async-paginate-model": "^1.0.0",
    "select-async-paginate-fetch": "^1.0.0",
    "qs": "^6.13.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/react": "^8.4.7",
    "@types/react": "^19.0.4",
    "@vitest/coverage-v8": "^2.1.8",
    "react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "5.7.3",
    "vitest": "^2.1.8",
    "vitest-fetch-mock": "^0.4.3"
  }
}
