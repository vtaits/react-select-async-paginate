{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "dist/ts",
    "jsx": "react-jsx",
    "lib": [
      "ESNext",
      "DOM",
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "__stories__/**/*"
  ]
}
