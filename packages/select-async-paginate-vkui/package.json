{
  "name": "select-async-paginate-vkui",
  "version": "1.0.0",
  "description": "Wrapper above react-select that supports pagination on menu scroll",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "dist/index.d.ts",
  "keywords": [
    "react",
    "react-select",
    "async",
    "pagination"
  ],
  "repository": "git@github.com:vtaits/react-select-async-paginate.git",
  "homepage": "https://github.com/vtaits/react-select-async-paginate/tree/master/packages/select-async-paginate-vkui",
  "author": "Vadim Taits",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format esm,cjs --dts --legacy-output",
    "lint": "biome check src",
    "lint:fix": "biome check src --write --unsafe",
    "format": "biome format src --write",
    "prepare": "bun run build",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "codecov": "codecov -F select_async_paginate_vkui"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@seznam/compose-react-refs": "^1.0.6",
    "@vkontakte/vkui": "^7.0.0",
    "select-async-paginate-model": "^1.0.0",
    "use-select-async-paginate": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vkontakte/vkui": "^7.1.1",
    "react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "5.7.3",
    "vitest": "^2.1.8"
  }
}
