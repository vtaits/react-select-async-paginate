{
  "name": "use-select-async-paginate",
  "version": "1.0.0",
  "description": "React hook for integration with `select-async-paginate-model`",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "typings": "./dist/index.d.ts",
  "keywords": [
    "react",
    "react-select",
    "async",
    "pagination",
    "fetch"
  ],
  "repository": "git@github.com:vtaits/react-select-async-paginate.git",
  "homepage": "https://github.com/vtaits/react-select-async-paginate/tree/master/packages/use-select-async-paginate",
  "author": "Vadim Taits",
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --sourcemap --format esm,cjs --dts --legacy-output",
    "lint": "biome check src",
    "lint:fix": "biome check src --write --unsafe",
    "format": "biome format src --write",
    "prepare": "bun run build",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "codecov": "codecov -F use_select_async_paginate"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "select-async-paginate-model": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.4",
    "@types/react": "^18.0.31",
    "@vitest/coverage-v8": "^1.5.0",
    "react": "^18.2.0",
    "select-async-paginate-model": "^1.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.2",
    "vitest": "^1.5.0"
  }
}
