    "codecov": "^3.8.3",
    "cross-env": "^10.1.0",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-refresh": "^0.17.0",
    "rimraf": "^6.0.1",
    "storybook": "^9.1.9",
    "typedoc": "^0.28.13",
    "typescript": "5.9.3",
    "vite": "^7.1.7"
  }
