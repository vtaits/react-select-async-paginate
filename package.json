  "scripts": {
    "build:docs": "typedoc --entryPointStrategy packages .",
    "start": "storybook dev -p 6006",
    "build": "bun ./scripts/build.ts",
    "lint": "bun --filter='*' run lint",
    "lint:fix": "bun --filter='*' run lint:fix",
